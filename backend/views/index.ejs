<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Generate Token</title>
    <style>
      .container {
        text-align: center;
      }
      label {
        text-align: left;
        font-size: 18px;
      }
      .form {
        text-align: left;
        margin: auto;
        max-width: 500px;
      }
      input {
        width: 80%;
        font-size: 18px;
        padding: 8px 10px;
      }
      button {
        background-color: cadetblue;
        color: #fff;
        padding: 8px 20px;
        border: 1px solid cadetblue;
        border-radius: 10px;
        font-size: 18px;
      }
      #result {
        text-align: center;
        font-size: 18px;
      }
      #error {
        text-align: center;
        font-size: 18px;
        color: red;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Generate New Token</h1>
      <div class="form">
        <label for="pcn">Enter PCN Number:</label><br /><br />
        <input
          type="text"
          name="pcn"
          id="pcn"
          placeholder="Enter PCN Number"
        /><br /><br />
        <button id="submitBtn">Submit</button>
      </div>
      <div id="result" style="display: none"></div>
      <div id="error" style="display: none"></div>
    </div>
    <script>

        var requestOptions = {
          method: "GET",
        };

        fetch("/verifylogin", requestOptions)
        .then((r) =>
            r.json().then((data) => ({ status: r.status, body: data }))
          )
          .then((res) => {
            console.log(res);
            if (res.status == 200) {
              console.log("logged in");
            } else if (res.status == 401) {
              window.location.href = "/login";
            }
          })
          .catch((error) => (window.location.href = "/login"));

        let submit = document.getElementById("submitBtn");
        submit.addEventListener("click", (e) => {
          e.preventDefault();
          let pcn = document.getElementById("pcn").value;
          var myHeaders = new Headers();
          myHeaders.append("Content-Type", "application/json");

          var raw = JSON.stringify({
            pcn,
          });

          var requestOptions = {
            method: "POST",
            headers: myHeaders,
            body: raw,
            redirect: "follow",
          };

          fetch("/generateToken", requestOptions)
            .then((response) => response.text())
            .then((res) => {
              let data = JSON.parse(res);
              let result = document.getElementById("result");
              let error = document.getElementById("error");
              result.innerHTML = data.token;
              result.style.display = "unset";
              error.style.display = "none";
            })
            .catch((err) => {
              let result = document.getElementById("result");
              let error = document.getElementById("error");
              error.innerHTML = err.message;
              result.style.display = "none";
              error.style.display = "unset";
            });
        });
    </script>
  </body>
</html>
